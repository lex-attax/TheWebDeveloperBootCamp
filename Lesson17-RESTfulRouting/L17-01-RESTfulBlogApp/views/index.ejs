<% include ./partials/header%>

<h1>index page</h1>

<% blogs.forEach(function(blog){ %>
    <div>
        <h2><%=blog.title%></h2>
        <img src="<%= blogs.image %>">
        <span><%= blog.created %> </span>
        <p><%= blog.body.substring(0, 100) %>...</p>
        <a href="/blogs/<%= blog._id %>">Reade More</a>
    </div>

<% }) %>

